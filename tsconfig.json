{
  "compilerOptions": {
    "target": "esnext",
    "module": "node18",
    "lib": ["esnext"],
    "moduleResolution": "node16",

    "allowJs": true,
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "./.dist",
		"declaration": true,
    "removeComments": true,

    "paths": {},
  	"types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "*.config.js",
    "*.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".dist"
  ]
}